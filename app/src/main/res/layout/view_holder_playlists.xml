<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/SpotifyPrimary">

    <ImageView
        android:id="@+id/vhPlaylistImageViewCoverImage"
        android:layout_width="170dp"
        android:layout_height="135dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/vhPlaylistTextViewTittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/SpotifyPrimary"
        android:gravity="center"
        android:padding="5dp"
        android:text="Playlist Name"
        android:textColor="@color/SpotifySecondary"
        app:layout_constraintBottom_toBottomOf="@+id/vhPlaylistImageViewCoverImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>